generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [postgis]
}

enum Highlight {
  LicensedProfessional
  EmergencySupport
  FreeConsultation
  QuickResponse
  QualityGuarantee
  FlexibleHours
  RemoteSupportAvailable
  FreeEstimates
  SameDayService
  EcoFriendly
  AffordablePricing
  LocallyOwned
  YearsOfExperience
}

enum Amenity {
  FreeInspection
  OnSiteInspection
  WarrantyIncluded
  FlexibleScheduling
  Support247
  OnlinePayment
  InvoiceAvailable
  FinancingOptions
  ReferralDiscount
  PostJobCleanup
}

enum ContractorType {
  HVAC
  Plumbing
  Electrical
  Carpentry
  Roofing
  Painting
  Drywall
  ApplianceRepair
  Landscaping
  Interlocking
  Masonry
  Flooring
  Handyman
  PestControl
  Welding
  Insulation
  SecuritySystems
  SmartHome
}

enum ApplicationStatus {
  Pending
  Denied
  Approved
}

enum PaymentStatus {
  Pending
  Paid
  PartiallyPaid
  Overdue
}

model Contractor {
  id                   Int            @id @default(autoincrement())
  name                 String
  description          String
  hourlyRate           Float
  advancePayment       Float
  installationFee      Float
  photoUrls            String[]
  amenities            Amenity[]
  highlights           Highlight[]
  isEmergencyAvailable Boolean        @default(false)
  offersOnSiteParking  Boolean        @default(false)
  yearsOfExperience    Int
  serviceAreaCoverage  Float
  teamSize             Int
  contractorType       ContractorType
  postedDate           DateTime       @default(now())
  averageRating        Float?         @default(0)
  numberOfReviews      Int?           @default(0)
  locationId           Int
  managerCognitoId     String

  location     Location      @relation(fields: [locationId], references: [id])
  manager      Manager       @relation(fields: [managerCognitoId], references: [cognitoId])
  bookings     Booking[]
  applications Application[]
  favoritedBy  Customer[]    @relation("CustomerFavorites")
  customers    Customer[]    @relation("CustomerContractors")
}

model Manager {
  id          Int    @id @default(autoincrement())
  cognitoId   String @unique
  name        String
  email       String
  phoneNumber String

  managedContractors Contractor[]
}

model Customer {
  id          Int    @id @default(autoincrement())
  cognitoId   String @unique
  name        String
  email       String
  phoneNumber String

  contractors  Contractor[]  @relation("CustomerContractors")
  favorites    Contractor[]  @relation("CustomerFavorites")
  applications Application[]
  bookings     Booking[]
}

model Location {
  id          Int                                   @id @default(autoincrement())
  address     String
  city        String
  state       String
  country     String
  postalCode  String
  coordinates Unsupported("geography(Point, 4326)")

  contractors Contractor[]
}

model Application {
  id                Int               @id @default(autoincrement())
  applicationDate   DateTime
  status            ApplicationStatus
  contractorId      Int
  customerCognitoId String
  name              String
  email             String
  phoneNumber       String
  message           String?
  bookingId         Int?              @unique

  contractor Contractor @relation(fields: [contractorId], references: [id])
  customer   Customer   @relation(fields: [customerCognitoId], references: [cognitoId])
  booking    Booking?   @relation(fields: [bookingId], references: [id])
}

model Booking {
  id                Int      @id @default(autoincrement())
  startDate         DateTime
  endDate           DateTime
  totalFee          Float
  advanceFee        Float
  contractorId      Int
  customerCognitoId String

  contractor  Contractor   @relation(fields: [contractorId], references: [id])
  customer    Customer     @relation(fields: [customerCognitoId], references: [cognitoId])
  application Application?
  payments    Payment[]
}

model Payment {
  id            Int           @id @default(autoincrement())
  amountDue     Float
  amountPaid    Float
  dueDate       DateTime
  paymentDate   DateTime
  paymentStatus PaymentStatus
  bookingId     Int

  booking Booking @relation(fields: [bookingId], references: [id])
}
